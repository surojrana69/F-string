#Fstrings

intro = "Hello my name is {} and I am from {} and currenly studying at {}" #You can use index as well

''''Example intro = "Hello my name is {} and I am from {} and currenly studying at {}" '''
name = "Suroj Rana"
place = "Hetauda"
college = "HSMSS"
print(intro.format(name, place, college))

#By using fstring
print(f"Hello my name is {name} and I am from {place} and currenly studying at {college}.")

#To print the variable We use double curly brackets {{}}

print(f"Hello my name is {{name}} and I am from {{place}} and currenly studying at {{college}}")

#Example of using fstring to print the decimal value 

grade = 88.55123
rank = f"for only {grade:.3f} GPA!"
print(rank)


# Define some variables
name = "Charlie"
age = 28
scores = [85, 90, 78]


average_score = sum(scores) / len(scores)  #len function returns the number of integers in scores variable

message = f"Student: {name}\nAge: {age}\nScores: {scores}\nAverage Score: {average_score:.2f}" #directly prints the formatted
#string stored in message.


print(message)
